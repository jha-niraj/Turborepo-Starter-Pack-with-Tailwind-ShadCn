{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "prisma/**/*"],
	"exclude": ["node_modules", "dist"]
}