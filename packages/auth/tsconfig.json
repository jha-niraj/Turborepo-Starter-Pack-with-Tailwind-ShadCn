{
	"compilerOptions": {
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"target": "ES2022",
		"moduleResolution": "Bundler",
		"skipLibCheck": true,
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noEmit": true,
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}