{
	"name": "@repo/prisma",
	"version": "1.0.0",
	"description": "Shared Prisma client for the monorepo",
	"type": "module",
	"main": "./index.ts",
	"module": "./index.ts",
	"types": "./index.ts",
	"scripts": {
		"db:generate": "dotenv -e ../../.env -- prisma generate --schema=./schema",
		"db:push": "dotenv -e ../../.env -- prisma db push --schema=./schema",
		"db:migrate": "dotenv -e ../../.env -- prisma migrate dev --schema=./schema",
		"db:studio": "dotenv -e ../../.env -- prisma studio --schema=./schema"
	},
	"exports": {
		".": "./index.ts",
		"./client": "./client.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@prisma/client": "6.14.0"
	},
	"devDependencies": {
		"@types/node": "^22.15.3",
		"dotenv-cli": "^11.0.0",
		"prisma": "6.14.0",
		"typescript": "5.9.2"
	}
}